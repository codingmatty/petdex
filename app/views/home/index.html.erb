<div class="hero min-h-screen bg-base-200">
  <div class="hero-content text-center">
    <div class="max-w-2xl">
      <h1 class="text-5xl font-bold">Welcome to PetDex</h1>
      <p class="py-6 text-lg">
        Manage your pets' medical records, prescriptions, care instructions, and photos all in one place.
      </p>

      <% if user_signed_in? %>
        <div class="space-y-4">
          <p class="text-xl">Hello, <%= current_user.email %>!</p>
          <div class="flex gap-4 justify-center">
            <button class="btn btn-primary btn-lg">My Pets</button>
            <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-outline btn-lg" %>
          </div>
        </div>
      <% else %>
        <div class="flex gap-4 justify-center">
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
          <%= link_to "Sign In", new_user_session_path, class: "btn btn-outline btn-lg" %>
        </div>
      <% end %>

      <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h2 class="card-title">Medical Records</h2>
            <p>Track vet visits, diagnoses, and treatments in one secure place.</p>
          </div>
        </div>

        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h2 class="card-title">Prescriptions</h2>
            <p>Manage medications, dosages, and refill reminders.</p>
          </div>
        </div>

        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h2 class="card-title">Photo Gallery</h2>
            <p>Store and organize all your precious pet memories.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
